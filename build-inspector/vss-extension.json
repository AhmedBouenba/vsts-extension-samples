{
    "manifestVersion": 1,
    "id": "samples-build-inspector",
    "version": "0.1.0",
    "name": "Build Inspector",
    "description": "A simple extension that demonstrates how to show details for a Visual Studio Online resource.",
    "publisher": "fabrikam",
    "icons": {
        "default": "images/fabrikam-logo.png"
    },
    "scopes": ["vso.build", "vso.work", "vso.code"],
    "tags": [
        "Sample"
    ],
    "categories": [
        "Developer samples"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "files": [
        {
            "path": "css",
            "addressable": true          
        },
        {
            "path": "images",
            "addressable": true          
        },
        {
            "path": "built",
            "addressable": true
        },
        {
            "path": "items.html",
            "addressable": true
        },
        {
            "path": "launch.html",
            "addressable": true
        },              
        {
            "path": "sdk",
            "addressable": true
        }        
    ],
    "contributions": [
        {
            "id": "showCommits",
            "type": "ms.vss-web.action",
            "description": "Menu action on builds grid to show associated items",
            "targets": [
                "ms.vss-build-web.completed-build-menu"
            ],
            "properties": {
                "title": "View associated items",
                "uri": "launch.html"
            }
        },
        {
            "id": "build.items",
            "type": "ms.vss-web.hub",
            "description": "Inspector hub to the Build hub group that shows items associated with a build",
            "targets": [
                "ms.vss-build-web.build-hub-group"
            ],
            "properties": {
                "name": "Inspector",
                "order": 22,
                "uri": "items.html"
            }
        }
    ]
}
